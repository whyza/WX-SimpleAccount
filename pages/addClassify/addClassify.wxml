<view class="swiper-tab">
  <view class="swiper-tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="clickTab">点人</view>
  <view class="swiper-tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="clickTab">随机</view>
  <view class="swiper-tab-item {{currentTab==2?'active':''}}" data-current="2" bindtap="clickTab">抢答</view>
</view>

<swiper class='swiper-box' current="{{currentTab}}" duration="300" bindchange="swiperTab" style="height:{{aheight}}rpx">
  <swiper-item>
    <view class='box1'>
      <view class='box1-title'>
        <text>已出勤学生</text>
      </view>
      <view class='box1-content'>
        <view class='box1-list' wx:for="{{students}}" wx:key="index" wx:for-item="item">
          <image src='{{item.src}}'></image>
          <view>{{item.name}}</view>
        </view>
      </view>
    </view>
  </swiper-item>
  <swiper-item>
    <view class='box2' bindtap='random'>随机点人</view>
  </swiper-item>
  <swiper-item>
    <view class='box3' bindtap='rushAnswer'>{{btnRush}}</view>
  </swiper-item>
</swiper>
