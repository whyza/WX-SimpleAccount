.i-tab-bar {
  display: flex;
  width: 100%;
  height: 57px;
  box-sizing: border-box;
  position: relative;
  justify-content: space-around;
  align-items: center;
  -webkit-box-align: center;
  background: #fff;
}

.i-tab-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e9eaec;
  border-top-width: 1px;
}

.i-tab-bar-fixed {
  position: fixed;
  bottom: 0;
  z-index: 2;
}

.i-tab-bar-list {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.i-tab-bar-layer {
  display: block;
  float: left;
  height: 100%;
}
.round-outer {
  position: relative;
  top: -40px;
  left: 8px;
  width: 70px;
  height: 70px;
  padding: 10px;
  border-radius: 50%;
  justify-content: center;
  vertical-align: middle;
  flex: none;
  z-index: 998;
}