.md-blockquote {
  margin: 0;
  padding: 0 15rpx;
  color: #777;
  border-left: 6rpx solid #ddd;
}
.md-p{
  font-size: 16rpx;
}

.md-ul,
.md-ol {
  padding: 0;
  margin-top: 0;
  margin-bottom: 0;
}

.md-ol {
  list-style-type: lower-roman;
}

.md-ol {
  list-style-type: lower-alpha;
}

.md-dd {
  margin-left: 0;
}

.md-kbd {
  background-color: #e7e7e7;
  background-image: -webkit-linear-gradient(#fefefe, #e7e7e7);
  background-image: linear-gradient(#fefefe, #e7e7e7);
  background-repeat: repeat-x;
  border-radius: 2rpx;
  border: 1rpx solid #cfcfcf;
  color: #000;
  padding: 3rpx 5rpx;
  line-height: 10rpx;
  font: 16rpx Consolas, "Liberation Mono", Menlo, Courier, monospace;
  display: inline-block;
}

.md-ul,
.md-ol {
  padding-left: 32rpx;
}

.md-ul .md-ul,
.md-ul .md-ol,
.md-ol .md-ol,
.md-ol .md-ul {
  margin-top: 0;
  margin-bottom: 0;
}

.md-dl {
  padding: 0;
}

.md-dl .md-dt {
  padding: 0;
  margin-top: 15rpx;
  font-size: 16rpx;
  font-style: italic;
  font-weight: bold;
}

.md-dl .md-dd {
  padding: 0 15rpx;
  margin-bottom: 15rpx;
}

.md-table {
  display: block;
  border-collapse: collapse;
  border-spacing: 0;
  width: 100%;
  overflow: auto;
}

.md-tr {
  background-color: #fff;
  border-top: 1rpx solid #ccc;
}

.md-tr:nth-child(2n) {
  background-color: #f8f8f8;
}

.md-th {
  font-weight: bold;
}

.md-th,
.md-td {
  width: 620rpx;
  padding: 6rpx 10rpx;
  border: 1rpx solid #ddd;
}

.md-th:first-child,
.md-td:first-child {
  width: 120rpx !important;
  word-break: break-all;
  word-wrap: break-word;
}