/* code 下语法缩进，由wxc工具编译，将2个空格替换为一个md--tab */
.md--tab{
  display: inline-block;
  width: 28rpx;
}

/* 以下是 markdown.wxss 的样式 */
.md-p,
.md-blockquote,
.md-ul,
.md-ol,
.md-dl,
.md-table{
  margin-top: 0;
  margin-bottom: 15rpx;
}

.md-a {
  color: #4183c4;
  text-decoration: none;
  background: transparent;
}

.md-strong {
  font-weight: bold;
}

.md-img {
  border: 0;
  max-width: 100%;
  box-sizing: border-box;
}

.md-hr {
  box-sizing: content-box;
  height: 0;
  margin: 15rpx 0;
  padding: 0;
  overflow: hidden;
  background: transparent;
  border: 0 none;
  border-bottom: 1rpx solid #ddd;
}

.md-hr:before {
  display: table;
  content: "";
}

.md-hr:after {
  display: table;
  clear: both;
  content: "";
}

.md-h1,
.md-h2,
.md-h3,
.md-h4,
.md-h5,
.md-h6 {
  position: relative;
  margin-top: 15rpx;
  margin-bottom: 15rpx;
  font-weight: bold;
  line-height: 1.4;
}

.md-h1 {
  font-size: 44rpx;
  line-height: 1.2;
  padding: 20rpx 0 10rpx;
  border-bottom: 1rpx solid #eee;
}

.md-h2 {
  font-size: 40rpx;
  line-height: 1.225;
  padding: 20rpx 0 10rpx;
  border-bottom: 1rpx solid #eee;
}

.md-h3 {
  font-size: 36rpx;
  line-height: 1.45;
}

.md-h4 {
  font-size: 32rpx;
}

.md-h5 {
  font-size: 28rpx;
}

.md-h6 {
  font-size: 24rpx;
}

.md-td,
.md-th {
  padding: 0;
}

.md-code {
  padding: 5rpx 0;
  margin: 0;
  font: 24rpx Consolas, "Liberation Mono", Menlo, Courier, monospace;
}

