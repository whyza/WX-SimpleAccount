<view>
    <!--<layout-head></layout-head>-->

    <!-- wxp template -->
    <example title="toast" desc="提示框" _pid="{{_pid}}">

        <example-demo title="子元素传值" desc="子元素设置文案" _pid="{{_pid}}" source="{{__code__.demoInner}}">
            <demo-inner _pid="{{_pid}}"></demo-inner>
        </example-demo>

        <example-demo title="title传值" desc="属性传参设置文案" _pid="{{_pid}}" source="{{__code__.demoDefault}}">
            <demo-default _pid="{{_pid}}"></demo-default>
        </example-demo>

        <example-demo title="长文案支持" desc="长文案提示，文案换行显示" _pid="{{_pid}}" source="{{__code__.demoLongText}}">
            <demo-long-text _pid="{{_pid}}"></demo-long-text>
        </example-demo>

        <example-demo title="设置 icon" desc="设置 icon 为 yes" _pid="{{_pid}}" source="{{__code__.demoIcon}}">
            <demo-icon _pid="{{_pid}}"></demo-icon>
        </example-demo>

        <example-demo title="自定义 icon 图" desc="自定义 icon 图片" _pid="{{_pid}}" source="{{__code__.demoIconImage}}">
            <demo-icon-image _pid="{{_pid}}"></demo-icon-image>
        </example-demo>

        <example-demo title="自定义 icon 色" desc="设置 icon 颜色 #ff5777" _pid="{{_pid}}" source="{{__code__.demoIconColor}}">
            <demo-icon-color _pid="{{_pid}}"></demo-icon-color>
        </example-demo>

        <example-demo title="调用show方法显示" desc="调用 show(message) 方法显示 toast" _pid="{{_pid}}" source="{{__code__.demoShow}}">
            <demo-show _pid="{{_pid}}"></demo-show>
        </example-demo>
        <example-md content="{{__code__.readme}}" _pid="{{_pid}}"></example-md>
    </example>

    <!--<layout-foot></layout-foot>-->
</view>