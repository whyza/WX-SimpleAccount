@import '../../common/assets/style/layout.wxss';

  .section {
    padding: 20rpx 40rpx;
  }

  .title--h2 {
    line-height: 70rpx;
    margin: 20rpx 40rpx;
    font-size: 32rpx;
    font-weight: bold;
    border-bottom: 1rpx solid #d2d2d2;
  }

  .section__p {
    font-size: 26rpx;
    margin-bottom: 20rpx;
  }
  .section__p__notice {
    margin: 20rpx 40rpx;
  }

  .code {
    padding: 15rpx;
    margin-bottom: 20rpx;
    background: #222222;
    color: #FFFFFF;
    font-size: 20rpx;
    font-family: Monaco;
  }
  .code__line__indent--2-space {
    text-indent: 40rpx;
  }
  .code__line__comment {
    color: #666666;
  }