@import '../../common/assets/style/layout.wxss';

  .section {
    padding: 0 20rpx 80rpx;
  }

  .wrap {
    display: block;
  }
  .item {
    flex-grow: 0;
    flex-shrink: 0;
    width: 28%;
    margin: 2.5%;
  }
  .item_intro {
    font-size: 24rpx;
    color: #666666;
    text-align: center;
  }
  .item_intro--small {
    font-size: 20rpx;
    color: #888888;
    text-align: center;
  }
  .item__color {
    width: 100%;
    height: 200rpx;
    margin-bottom: 10rpx;
  }
  .item__color--brand {
    background: #ff0077;
  }
  .item__color--control {
    background: #ff5777;
  }
  .item__color--topic {
    background: #333333;
  }
  .item__color-secondary {
    background: #666666;
  }
  .item__color--prompt {
    background: #999999;
  }
  .item__color--split {
    background: #ececec;
  }
  .item__color--background {
    background: #efefef;
  }
  .item__color--prompt-bg {
    background: #ffe8ee;
  }