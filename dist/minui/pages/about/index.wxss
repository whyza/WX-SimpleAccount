@import '../../common/assets/style/layout.wxss';

  .section {
    padding: 20rpx 40rpx;
  }

  .section__poetry {
    padding: 40rpx 80rpx;
    margin-bottom: 60rpx;
    color: #777777;
    text-align: center;
  }
  .section__changelog {
    padding: 0 10rpx;
    margin-bottom: 30rpx;
    font-size: 28rpx;
    color: #777777;
  }

  .title--h2 {
    line-height: 70rpx;
    margin: 20rpx 40rpx;
    font-size: 32rpx;
    font-weight: bold;
    border-bottom: 1rpx solid #d2d2d2;
  }
  .title--h3 {
    line-height: 50rpx;
    font-size: 30rpx;
    font-weight: bold;
  }

  .section__p {
    font-size: 26rpx;
    line-height: 1.6;
  }

  .section__p--for-space {
    margin-bottom: 25rpx;
  }

  .weapp__list {
    display: block;
  }
  .weapp__item {
    flex-grow: 0;
    flex-shrink: 0;
    width: 45%;
    margin: 2.5%;
    overflow: hidden;
  }
  .weapp__qrcode {
    display: block;
    width: 100%;
    height: 300rpx;
  }
  .weapp__title {
    display: block;
    margin-top: 15rpx;
    font-size: 28rpx;
    text-align: center;
    color: #777777;
  }
  .wechat__content {
    color:#666;
    font-size:28rpx;
    line-height:1.6;
  }
  .wechat__image {
    display:block;
    width: 500rpx;
    height: 500rpx;
    margin:0 auto;
  }