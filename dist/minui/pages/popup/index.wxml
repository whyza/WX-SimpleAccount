        <example-demo title="居左，有动画" desc="居左的 Popup 可用于左侧的侧边栏、左侧的弹出提醒等" _pid="{{_pid}}" source="{{__code__.demoLeft}}">
            <demo-left _pid="{{_pid}}"></demo-left>
        </example-demo>

        <example-demo title="居右，有动画" desc="居右的 Popup 可用于右侧的侧边栏、右侧的弹出提醒等" _pid="{{_pid}}" source="{{__code__.demoRight}}">
            <demo-right _pid="{{_pid}}"></demo-right>
        </example-demo>

        <example-demo title="mask 配置" desc="支持透明度，背景色配置" _pid="{{_pid}}" source="{{__code__.demoCustomMask}}">
            <demo-custom-mask _pid="{{_pid}}"></demo-custom-mask>
        </example-demo>

        <example-md content="{{__code__.readme}}" _pid="{{_pid}}"></example-md>
    </example>

