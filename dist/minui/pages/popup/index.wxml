    <!-- wxp template -->
    <example title="popup" desc="基础弹层" _pid="{{_pid}}">

        <example-demo title="默认居中，无动画" desc="默认的 Popup 样式，内容居中，无动画" _pid="{{_pid}}" source="{{__code__.demoDefault}}">
            <demo-default _pid="{{_pid}}"></demo-default>
        </example-demo>

        <example-demo title="居中，有动画" desc="居中的 Popup 可用于Dialog、确认提醒等" _pid="{{_pid}}" source="{{__code__.demoCenter}}">
            <demo-center _pid="{{_pid}}"></demo-center>
        </example-demo>

        <example-demo title="居上，有动画" desc="居上的 Popup 可用于顶部提醒、顶部菜单等功能" _pid="{{_pid}}" source="{{__code__.demoTop}}">
            <demo-top _pid="{{_pid}}"></demo-top>
        </example-demo>

        <example-demo title="居下，有动画" desc="居下的 Popup 可用于弹出框、选择器等" _pid="{{_pid}}" source="{{__code__.demoBottom}}">
