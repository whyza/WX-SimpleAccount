.bill-container {
  position: relative;
  height: 70px;
  padding: 10px 0 20px 0;
}
.billtype {
  position: absolute;
  top: 8px;
  left: 73px;
  font-size: 15px;
  font-weight: 200px;
}
.bill-content {
  font-size: 12px;
  color: #ddd;
  position: absolute;
  top: 40px;
  left: 75px;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 200px;
}

.bill-money {
  font-size: 24px;
  font-weight: 800px;
  float: right;
  margin: 8px 10px 0 0;
}
